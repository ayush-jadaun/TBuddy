# ===========================================
# RINGMASTER ROUND TABLE - ENVIRONMENT CONFIG
# ===========================================

# Google AI (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Weather API (OpenWeather)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Maps API (OpenRouteService)
OPENROUTE_API_KEY=your_openroute_api_key_here

# Events API (OpenWeb Ninja) - Optional
OPENWEB_NINJA_API_KEY=your_openweb_ninja_api_key_here
OPENWEB_NINJA_BASE_URL=https://api.openwebninja.com/realtime-events-data/search-events
OPENWEB_NINJA_TIMEOUT=30.0

# ===========================================
# REDIS CONFIGURATION (UPSTASH)
# ===========================================
# Get your Upstash Redis URL from: https://console.upstash.com/
# Format: redis://default:your_password@your_endpoint.upstash.io:port
REDIS_URL=redis://default:your_upstash_password@your_endpoint.upstash.io:6379

# Redis Connection Settings
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# ===========================================
# STATE MANAGEMENT
# ===========================================
STATE_TTL_SECONDS=3600
STATE_EXTEND_ON_ACTIVITY=true

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=TBuddy
DEBUG=true
HOST=localhost
PORT=8000

# ===========================================
# MODEL CONFIGURATION
# ===========================================
MODEL_NAME=gemini-2.5-flash
TEMPERATURE=0.1
MAX_TOKENS=

# ===========================================
# EVENT SERVICE CONFIGURATION
# ===========================================
EVENTS_FALLBACK_ENABLED=true
EVENTS_CACHE_TTL=3600
EVENTS_MAX_RESULTS=100
EVENTS_DEFAULT_DAYS_AHEAD=30

# ===========================================
# AGENT TIMEOUTS (milliseconds)
# ===========================================
TIMEOUT_WEATHER=10000
TIMEOUT_EVENTS=15000
TIMEOUT_MAPS=12000
TIMEOUT_BUDGET=8000
TIMEOUT_ITINERARY=20000

# ===========================================
# ORCHESTRATOR CONFIGURATION
# ===========================================
MAX_PARALLEL_AGENTS=4
AGENT_RETRY_ATTEMPTS=2
ORCHESTRATOR_TIMEOUT=60000

# ===========================================
# STREAMING CONFIGURATION
# ===========================================
STREAMING_ENABLED=true
STREAMING_CHUNK_DELAY_MS=100

# ===========================================
# WORKER CONFIGURATION
# ===========================================
WORKER_CONCURRENCY=10
WORKER_HEARTBEAT_INTERVAL=30